{
  "manifest_version": 3,
  "name": "Mr. Movie",
  "version": "0.95",
  "description": "Movie/Actor information manager.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "notifications",
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/video-camera1616.png"
  },
  "icons": {
    "16": "icons/video-camera1616.png",
    "48": "icons/video-camera4848.png",
    "128": "icons/video-camera128128.png"
  }
}

